<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eposition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sravyanaguboyina.eventbuzz.emp_signup">

    <TextView
        android:id="@+id/staff"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/descp1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/descp1"
        android:layout_marginTop="42dp"
        android:text="EmployeeID"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="51dp" />

    <EditText
        android:id="@+id/eusertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Employee No"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="51dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_above="@+id/descrtxt1"
        android:layout_alignLeft="@+id/sconduct"
        android:layout_alignStart="@+id/sconduct" />

    <TextView
        android:id="@+id/descp1"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/descrtxt1"
        android:layout_alignBottom="@+id/descrtxt1"
        android:layout_alignLeft="@+id/startdate"
        android:layout_alignStart="@+id/startdate"
        android:text="Password"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="116dp" />

    <EditText
        android:id="@+id/descrtxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="116dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/staff"
        android:layout_alignLeft="@+id/eusertxt"
        android:layout_alignStart="@+id/eusertxt" />

    <TextView
        android:id="@+id/startdate"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="EMail"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="196dp"
        android:layout_above="@+id/stimetxt"
        android:layout_alignLeft="@+id/starttime"
        android:layout_alignStart="@+id/starttime" />

    <EditText
        android:id="@+id/sdatetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="196dp"
        android:layout_alignBaseline="@+id/startdate"
        android:layout_alignBottom="@+id/startdate"
        android:layout_alignLeft="@+id/emp_nametxt"
        android:layout_alignStart="@+id/emp_nametxt" />

    <TextView
        android:id="@+id/starttime"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="PhoneNumber"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="276dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/stimetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="276dp"
        android:layout_alignTop="@+id/starttime"
        android:layout_alignLeft="@+id/sdatetxt"
        android:layout_alignStart="@+id/sdatetxt" />

    <Button
        android:id="@+id/sconduct"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="380dp"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/enddate"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="position"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/stimetxt"
        android:layout_alignLeft="@+id/starttime"
        android:layout_alignStart="@+id/starttime" />

    <Spinner
        android:id="@+id/pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/enddate"
        android:layout_alignLeft="@+id/stimetxt"
        android:layout_alignStart="@+id/stimetxt"
        android:layout_alignRight="@+id/stimetxt"
        android:layout_alignEnd="@+id/stimetxt" />

    <TextView
        android:id="@+id/depptt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Department"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/pos"
        android:layout_alignLeft="@+id/enddate"
        android:layout_alignStart="@+id/enddate" />

    <Spinner
        android:id="@+id/dptt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pos"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/pos"
        android:layout_alignTop="@+id/depptt" />

    <TextView
        android:id="@+id/emp_name"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Name"
        android:layout_alignBaseline="@+id/emp_nametxt"
        android:layout_alignBottom="@+id/emp_nametxt"
        android:layout_alignLeft="@+id/descp1"
        android:layout_alignStart="@+id/descp1" />

    <EditText
        android:id="@+id/emp_nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/descp1"
        android:layout_alignLeft="@+id/descrtxt1"
        android:layout_alignStart="@+id/descrtxt1" />

</RelativeLayout>
